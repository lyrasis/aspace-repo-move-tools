source 'https://rubygems.org'

gem 'archivesspace-client'

# The following gems are required by JSONModel loaded from common.jar and are
#    pinned to the version used in AS
gem 'atomic', '= 1.0.1'
gem 'json-schema', '1.0.10'

# The following gems are required by indirectly by JSONModel loaded from
#   common.jar and are pinned to the version used in AS
